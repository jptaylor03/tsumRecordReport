<?xml version="1.0" ?>
<Configuration name="Log4j1">
	<Appenders>
		<Console name="stdout" target="SYSTEM_OUT">
			<PatternLayout pattern="%-5p [%c{1}] - %m%n"/>
		</Console>
		<RollingFile name="tsumRecordReport" fileName="./logs/tsumRecordReport.log" append="false" filePattern="./logs/tsumRecordReport.log.%i">
			<PatternLayout pattern="%d [%t] %-5p %c - %m%n"/>
			<Policies>
				<SizeBasedTriggeringPolicy size="10240KB"/>
			</Policies>
			<DefaultRolloverStrategy max="1" fileIndex="min"/>
		</RollingFile>
	</Appenders>
	<Loggers>
		<Root level="INFO">
			<AppenderRef ref="tsumRecordReport"/>
			<AppenderRef ref="stdout"/>
		</Root>
	</Loggers>
</Configuration>